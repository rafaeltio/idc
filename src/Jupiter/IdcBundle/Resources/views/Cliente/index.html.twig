{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Cliente list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Tipo</th>
                <th>Nome</th>
                <th>Razaosocial</th>
                <th>Telefonefixo</th>
                <th>Telefonecelular1</th>
                <th>Telefonecelular2</th>
                <th>Cpf</th>
                <th>Cnpj</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('cliente_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.tipo }}</td>
                <td>{{ entity.nome }}</td>
                <td>{{ entity.razaoSocial }}</td>
                <td>{{ entity.telefoneFixo }}</td>
                <td>{{ entity.telefoneCelular1 }}</td>
                <td>{{ entity.telefoneCelular2 }}</td>
                <td>{{ entity.cpf }}</td>
                <td>{{ entity.cnpj }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('cliente_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('cliente_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('cliente_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
